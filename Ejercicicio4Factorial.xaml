<Window x:Class="Asignacion2Aplicada.Ejercicicio4Factorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asignacion2Aplicada"
        mc:Ignorable="d"
        Title="Ejercicicio4Factorial" Height="200" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
             
                <Label Content="Numero"></Label>
                <TextBox x:Name="NumerotextBox" Height="20" Width="70"></TextBox>
                <Button x:Name="factorial" Content="Calcular" Height="20" Width="70" Margin="4" Click="factorial_Click"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label  Content="Factorial" Margin="0"></Label>
                <Label x:Name="resultado"></Label>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
