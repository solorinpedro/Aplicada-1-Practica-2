<Window x:Class="Asignacion2Aplicada.Ejercicio1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asignacion2Aplicada"
        mc:Ignorable="d"
        Title="Ejercicio1" Height="300" Width="350">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">

                <Label Content = "Numero"></Label>
                <TextBox x:Name="Numero" Height="18" Width="70"></TextBox>
                <Button Content="Calcular" x:Name = "Multiplicar" Click = "Multiplicar_Click" Margin="5"></Button>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <ListBox x:Name="TablaMultiplicar" Height="200" Width="160" Margin="15"></ListBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
