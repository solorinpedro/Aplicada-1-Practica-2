<Window x:Class="Asignacion2Aplicada.Ejercicio2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asignacion2Aplicada"
        mc:Ignorable="d"
        Title="Ejercicio2" Height="250" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Base"></Label>
                <TextBox x:Name="Base" Height="20" Width="70" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Potencia" Height="25" Width="70" Margin="0"></Label>
                <TextBox x:Name="Potencia" Height="20" Width="70"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Calcular" Name="Elevar" Height="25" Width=" 70" Margin="10" Click="Elevar_Click"></Button>
                <Label x:Name="resultado"></Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
